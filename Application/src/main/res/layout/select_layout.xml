<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Video Resolution"
            android:textAlignment="center"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:id="@+id/resolution"
            android:checkedButton="@+id/r240p">

            <RadioButton
                android:id="@+id/r240p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="240p" />

            <RadioButton
                android:id="@+id/r480p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="480p" />

            <RadioButton
                android:id="@+id/r576p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="576p" />

            <RadioButton
                android:id="@+id/r720p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="720p" />

            <RadioButton
                android:id="@+id/r1080p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1080p" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select FPS" />

        <RadioGroup
            android:id="@+id/fps"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:checkedButton="@+id/fps30">

            <RadioButton
                android:id="@+id/fps15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 fps" />

            <RadioButton
                android:id="@+id/fps30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30 fps" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Number of Streams" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <SeekBar
                android:id="@+id/numStreamSeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="16"
                android:progress="6"
                android:visibility="visible" />

            <TextView
                android:id="@+id/maxStreams"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="16" />


        </LinearLayout>

        <TextView
            android:id="@+id/numStreamsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="6"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start" />

    </LinearLayout>
</ScrollView>